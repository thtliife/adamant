{
  "name": "@thtliife/adamant",
  "version": "0.1.0",
  "description": "_My opinionated linting setup for javascript projects_",
  "main": "index.js",
  "bin": {
    "adamant": "./index.js"
  },
  "scripts": {
    "test": "echo \"no test specified\"",
    "prettier": "npx prettier --write src/**/*.js",
    "lint": "eslint --debug src/",
    "lint:write": "eslint --debug src/"
  },
  "keywords": [],
  "author": "Vito Giarrusso <vito.giarrusso@me.com> (https://github.com/thtliife)",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "npm run lint:write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-jest-enzyme": "^7.0.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "dependencies": {
    "enquirer": "^2.3.0",
    "ora": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/thtliife/adamant.git"
  },
  "bugs": {
    "url": "https://github.com/thtliife/adamant/issues"
  },
  "homepage": "https://github.com/thtliife/adamant#readme"
}
